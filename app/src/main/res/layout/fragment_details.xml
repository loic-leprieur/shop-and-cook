<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        app:srcCompat="@color/colorAccent"
        android:id="@+id/image_recipePicture"
        android:cropToPadding="false"
        android:layout_height="150dp" />

    <TextView
        android:text="recipeNameNotFound"
        android:layout_width="wrap_content"
        android:id="@+id/text_recipeTitle"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/image_recipePicture"
        android:layout_marginStart="35dp"
        android:textColor="@color/colorAccent" />

    <TextView
        android:text="TextView"
        android:layout_height="wrap_content"
        android:id="@+id/text_recipeDescription"
        tools:text="lorem ipsum dolor sit amet lorem ipsum dolor sit amet lorem ipsum dolor sit amet lorem ipsum dolor sit amet lorem ipsum dolor sit amet lorem ipsum dolor sit amet"
        android:layout_marginTop="25dp"
        android:textAlignment="textStart"
        android:layout_width="180dp"
        android:layout_below="@+id/text_recipeTitle"
        android:layout_toEndOf="@+id/image_recipePicture"
        android:layout_marginStart="15dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:id="@+id/list_ingredients"
        android:layout_height="210dp"
        android:layout_below="@+id/image_recipePicture" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:layout_width="80dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark"
            android:id="@+id/button_like"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="0.25"
            android:elevation="1dp" />

        <ImageButton
            android:layout_width="80dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal"
            android:id="@+id/button_instructions"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.25"
            android:elevation="1dp" />

        <ImageButton
            android:layout_width="80dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark"
            android:id="@+id/button_bookmark"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="0.25"
            android:elevation="1dp" />

        <ImageButton
            android:layout_width="80dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_light_focused"
            android:id="@+id/button_share"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/button_instructions"
            android:layout_weight="0.25"
            android:elevation="1dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_ingredients"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark"
            android:id="@+id/icon_price"
            android:layout_weight="0.3" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark_focused"
            android:id="@+id/icon_time"
            android:layout_weight="0.3" />

        <ImageView
            android:layout_height="50dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark"
            android:layout_below="@+id/list_ingredients"
            android:layout_alignParentStart="false"
            android:id="@+id/icon_difficulty"
            android:cropToPadding="false"
            android:adjustViewBounds="false"
            android:layout_width="50dp"
            android:layout_weight="0.3" />
    </LinearLayout>

</RelativeLayout>